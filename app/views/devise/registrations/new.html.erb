<div class="panel panel-default">
	<div class="panel-heading"><h2>Sign up</h2></div>
	<div class="panel-body">
     <div class="row">
      <div class="col-md-6">
        <div class="well well-lg"> 
      		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      		  <%= devise_error_messages! %>
      			<%= render :partial => 'devise/registrations/signupfields', :locals => { :f => f } %>
            <div class="form-group">
              <div><%= f.label :avatar, 'Profile picture (headshot photo, like a passport pic)' %><br />
              <%= f.file_field :avatar, :autofocus => true, class: "form-control"  %></div><br />
              <%= image_tag @user.avatar.url(:thumb) %>
            </div>
      			<div class="form-group">
      			  <div><%= f.label :password %><br />
      			  <%= f.password_field :password, class: "form-control" %></div>
      			</div>
      			<div class="form-group">
      			  <div><%= f.label :password_confirmation %><br />
      			  <%= f.password_field :password_confirmation, class: "form-control" %></div>
      			</div>
      			<div class="form-group">
      		  	<div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
      		  </div>
      		<% end %>
        </div>
      </div>
    </div>
	</div>

	<div class="panel-footer"><%= render "devise/shared/links" %></div>
</div>
